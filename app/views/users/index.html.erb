<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @books.errors.count %>errors prohibited this obj from begin saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="col-xs-3">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <% if @user.id == current_user.id %>
   <div class="row">
      <%= link_to edit_user_path(@user), class: "col-xs-12 btn btn-default" do %>
        <i class="fas fa-wrench"></i>
      <% end %>
   </div>
  <% end %>
  <h2>New book</h2>
  <%= form_with model:@book, url:'/books', local:true do |f| %>
    <div class="field row">
      <label>Title</label></br>
      <%= f.text_field :title, class:"col-xs-12" %>
    </div>
    <div class="field row">
      <label>Opinion</label></br>
      <%= f.text_area :body,class:"col-xs-12" %>
    </div>
    <div class="actions row">
      <p><%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %></p>
    </div>
  <% end %>
</div>
<div class="col-xs-9">
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th colsapn="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |users| %>
        <tr>
          <td><%= attachment_image_tag users, :profile_image, :fill, 40,40, fallback: "no_image.jpg", size: '40x40', class:"pull-left profile-thumb" %></td>
          <td><%= users.name %></td>
          <td><%= link_to 'Show', user_path(users.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>