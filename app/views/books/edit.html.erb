<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this obj from begin saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="col-md-6 col-md-offset-3">
  <h1>Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
   <div class="field row">
     <label>Title</label>
     <%= f.text_field :title, autofocus: true, class:"col-xs-12"%>
   </div>
   <div class="field row">
     <label>Opinion</label>
     <%= f.text_area :body, class:"col-xs-12" %>
   </div>
   <div class="actions row">
     <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
   </div>
  <% end %>
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>
